{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
  {{#if related}}
    <section class="related">
      <h3 class="related-title u-sep"><span class="text">You might also like</span></h3>
      <div class="row">
        {{#foreach related}}
          <div class="related-column col-md-4">
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
              {{> post-media small_image=true}}
              {{> post-header}}
            </article>
          </div>
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}