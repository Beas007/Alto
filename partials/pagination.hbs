<nav class="pagination kg-width-wide">
  <div class="pagination-left">
    {{#if prev}}
      <a class="newer-posts" href="{{page_url prev}}"><i class="icon icon-arrow-left"></i> Newer Posts</a>
    {{/if}}
  </div>
  <span class="page-number hidden-xs hidden-sm">Page {{page}} of {{pages}}</span>
  <div class="pagination-right">
    {{#if next}}
      <a class="older-posts" href="{{page_url next}}">Older Posts <i class="icon icon-arrow-right"></i> </a>
    {{/if}}
  </div>
</nav>